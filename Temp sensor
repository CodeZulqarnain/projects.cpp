#include <iostream>
#include <cstdlib>
#include <ctime>
#include <iomanip>

class TemperatureSensor {
public:
    float getTemperature() {
        // Simulate sensor reading (replace with actual hardware code)
        return 20.0f + (rand() % 150) / 10.0f; // Random temp between 20.0-35.0°C
    }
};

void displayTemperature(float temp) {
    std::cout << "Current Temperature: " << std::fixed << std::setprecision(1) 
              << temp << "°C - ";
              
    if (temp < 10.0) std::cout << "Too Cold! ❄️";
    else if (temp > 30.0) std::cout << "Too Hot! 🔥";
    else std::cout << "Normal 😊";
    std::cout << std::endl;
}

int main() {
    srand(time(0)); // Seed random number generator
    TemperatureSensor sensor;
    
    std::cout << "Temperature Monitoring System" << std::endl;
    std::cout << "-----------------------------" << std::endl;
    
    for (int i = 0; i < 5; ++i) { // Simulate 5 readings
        float temp = sensor.getTemperature();
        displayTemperature(temp);
    }
    
    return 0;
}
